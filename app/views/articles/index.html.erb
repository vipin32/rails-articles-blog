
<h1>Articles</h1>

<p><%= link_to "Create an Article", new_article_path, class: "btn btn-success" %></p>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th class="text-center">Actions</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td class="d-flex justify-content-center">
        <%= link_to "Show", article_path(article), class: "btn btn-info mx-1" %>
        <%= link_to "Edit", edit_article_path(article), class: "btn btn-secondary mx-1" %>
        <%= button_to "Delete", article_path(article), method: :delete, class: "btn btn-danger" %>
      </td>

    </tr>
  <% end %>

</table>