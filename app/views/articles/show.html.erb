<h3>
    Title : <%= @article.title %>
</h3>

<p>
    Description : <%= @article.description %>
</p>

<p>
    <small>Author : <%= (link_to @article.user.username, user_path(@article.user)) if @article.user %> </small>
</p>

<% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <a href="<%= edit_article_path(@article) %>">Edit Article </a> |
<% end %>

<%= link_to "Back to Articles", articles_path %>
