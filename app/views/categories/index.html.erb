<% @categories.each do |category| %>

    <div class="card-body bg-light mb-2">
        <h3><%= link_to category.name, category_path(category) %></h3>

        <div class="d-flex mt-2">
          <% if logged_in? && current_user.admin? %>
            <%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-secondary mr-1" %>
            <%= button_to "Delete", category_path(category), method: :delete, class: "btn btn-sm btn-danger " %>
          <% end %>
        </div>

    </div>

    
  <% end %>